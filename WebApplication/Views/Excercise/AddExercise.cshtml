@model ApiClients.Model.DTO.ExerciseDTO
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "AddExercise";
}

<h2>AddExercise</h2>
<form action="@Html.Raw(Url.Content("/") + "api/exercises/user/" + User.Identity.GetUserId())">

    <input type="text" id="Id" value="@Guid.NewGuid()" style="display:none" />
    <div class="form-group">
        <label>
            <span> @Html.DisplayNameFor(m => m.Name)</span>
            @Html.EditorFor(m => m.Name, new { @class = "k-textbox" })
        </label>
        <div>
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="form-group">
        <label>
            <span> @Html.DisplayNameFor(m => m.Description)</span>
            @Html.EditorFor(m => m.Description, new { @class = "k-textbox" })
        </label>
        <div>
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>
    <div class="form-group">
        <label>
            <span> @Html.DisplayNameFor(m => m.CaloriesPerHour)</span>
            @Html.EditorFor(m => m.CaloriesPerHour, new { @class = "k-textbox" })
        </label>
        <div>
            @Html.ValidationMessageFor(m => m.CaloriesPerHour)
        </div>
    </div>
    <label class="k-button">
        Dodaj zdjęcie
        <input type="file" name="Image" id="Image" style="display:none" />
    </label>
    <img id="img" />
    <input class="k-button k-primary" value="Dodaj ćwiczenie" type="submit" />
</form>


