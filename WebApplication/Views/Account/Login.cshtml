
@{
    ViewBag.Title = "Login";
}
@model WebApplication.Models.LoginBindingModel

<style>
    #login-from .form-group input{
        width:100%
    }
</style>
<h2>Login</h2>
@using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "login-from" }))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label>
            @Html.DisplayNameFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "k-textbox" })
        </label>
        <div>
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="form-group">
        <label>
            @Html.DisplayNameFor(m => m.Password)
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "k-textbox" } })
        </label>
        <div>
            @Html.ValidationMessageFor(m => m.Password)
        </div>


    </div>
    <input class="k-button k-primary" value="Zaloguj" type="submit" />
}
