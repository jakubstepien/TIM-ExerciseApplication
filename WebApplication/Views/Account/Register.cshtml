
@{
    ViewBag.Title = "Rejestracja";
}
@model WebApplication.Models.RegisterBindingModel

<h2>Rejestracja</h2>
@if (!string.IsNullOrEmpty(ViewBag.Errors))
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @Html.Raw(ViewBag.Errors)
    </div>
}
@using (Html.BeginForm("Register", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "register-from" }))
{


    @Html.ValidationSummary(true)
    <div class="form-group">
        <label>
            <span>
                @Html.DisplayNameFor(m => m.Email)
            </span>
            @Html.TextBoxFor(m => m.Email, new { @class = "k-textbox" })
        </label>
        <div>
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="form-group">
        <label>
            <span>
                @Html.DisplayNameFor(m => m.Password)
            </span>
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "k-textbox" } })
        </label>
        <div>
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    <div class="form-group">
        <label>
            <span>
                @Html.DisplayNameFor(m => m.ConfirmPassword)
            </span>
            @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "k-textbox" } })
        </label>
        <div>
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
    </div>
    <input class="k-button k-primary" value="Zajerestruj się" type="submit" />
}